{
    "version": 2,
    "builds": [
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "50mb"
        }
      },
      {
        "src": "/package.json",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/api/$1" }
    ]
}
  